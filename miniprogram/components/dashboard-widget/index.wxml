<view class="widget-container" wx:if="{{topIssue}}">
  <view class="alert-card {{topIssue.priority}}">
    <view class="icon-area">
      <view class="icon-warning">!</view>
    </view>
    <view class="content-area">
      <view class="title">需要关注</view>
      <view class="message">{{topIssue.title}}</view>
      <view class="meta" wx:if="{{topIssue.due_mileage}}">目标里程 {{topIssue.due_mileage}} km</view>
    </view>
    <view class="action-area">
      <view class="btn-resolve" bindtap="onResolve">处理</view>
    </view>
  </view>
</view>
