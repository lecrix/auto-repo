<view class="empty-state">
  <view class="empty-icon">{{icon}}</view>
  <view class="empty-title">{{title}}</view>
  <view class="empty-description" wx:if="{{description}}">{{description}}</view>
  <button 
    wx:if="{{actionText}}" 
    class="empty-action-btn" 
    bindtap="onAction"
  >
    {{actionText}}
  </button>
</view>
