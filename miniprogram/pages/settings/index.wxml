<view class="container {{themeClass}}">
  <custom-nav showBack="{{true}}" title="设置" />
  
  <view class="settings-card">
    <view class="section-title">外观</view>
    
    <view class="setting-item" bindtap="selectTheme" data-theme="auto">
      <view class="setting-left">
        <text class="setting-icon">🌗</text>
        <view class="setting-info">
          <text class="setting-label">跟随系统</text>
          <text class="setting-desc">自动切换深浅色模式</text>
        </view>
      </view>
      <view class="radio {{currentTheme === 'auto' ? 'active' : ''}}"></view>
    </view>
    
    <view class="setting-item" bindtap="selectTheme" data-theme="light">
      <view class="setting-left">
        <text class="setting-icon">☀️</text>
        <view class="setting-info">
          <text class="setting-label">浅色模式</text>
          <text class="setting-desc">始终使用浅色主题</text>
        </view>
      </view>
      <view class="radio {{currentTheme === 'light' ? 'active' : ''}}"></view>
    </view>
    
    <view class="setting-item" bindtap="selectTheme" data-theme="dark">
      <view class="setting-left">
        <text class="setting-icon">🌙</text>
        <view class="setting-info">
          <text class="setting-label">深色模式</text>
          <text class="setting-desc">始终使用深色主题</text>
        </view>
      </view>
      <view class="radio {{currentTheme === 'dark' ? 'active' : ''}}"></view>
    </view>
  </view>
  
  <view class="settings-card">
    <view class="section-title">账户</view>
    
    <view class="setting-item" bindtap="handleLogout">
      <view class="setting-left">
        <text class="setting-icon">🚪</text>
        <view class="setting-info">
          <text class="setting-label">退出登录</text>
          <text class="setting-desc">清除本地登录状态</text>
        </view>
      </view>
      <text class="arrow">›</text>
    </view>
  </view>
  
  <view class="settings-card">
    <view class="section-title">关于</view>
    
    <view class="setting-item">
      <view class="setting-left">
        <text class="setting-icon">📱</text>
        <view class="setting-info">
          <text class="setting-label">版本</text>
        </view>
      </view>
      <text class="setting-value">v2.0.1</text>
    </view>
  </view>
</view>
