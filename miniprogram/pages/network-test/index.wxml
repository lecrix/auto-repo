<view class="container">
  <view class="header">网络诊断工具</view>
  
  <view class="section">
    <text class="title">当前配置</text>
    <view class="info-item">
      <text class="label">环境:</text>
      <text class="value">{{environment}}</text>
    </view>
    <view class="info-item">
      <text class="label">API地址:</text>
      <text class="value">{{baseURL}}</text>
    </view>
  </view>

  <view class="section">
    <text class="title">连接测试</text>
    <button bindtap="testConnection" disabled="{{testing}}">
      {{testing ? '测试中...' : '开始测试'}}
    </button>
  </view>

  <view class="section" wx:if="{{result}}">
    <text class="title">测试结果</text>
    <view class="result {{result.success ? 'success' : 'error'}}">
      <text>{{result.message}}</text>
    </view>
    <view class="details" wx:if="{{result.details}}">
      <text>详细信息:</text>
      <text class="detail-text">{{result.details}}</text>
    </view>
  </view>
</view>
