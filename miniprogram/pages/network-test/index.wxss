.container {
  padding: 40rpx;
}

.header {
  font-size: 48rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 60rpx;
}

.section {
  margin-bottom: 60rpx;
  padding: 40rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
}

.title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  margin-bottom: 20rpx;
}

.label {
  width: 180rpx;
  color: #666;
}

.value {
  flex: 1;
  word-break: break-all;
  font-family: monospace;
}

button {
  width: 100%;
  background: #07c160;
  color: white;
  border: none;
}

button[disabled] {
  background: #ccc;
}

.result {
  padding: 30rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  text-align: center;
}

.result.success {
  background: #d4edda;
  color: #155724;
}

.result.error {
  background: #f8d7da;
  color: #721c24;
}

.details {
  margin-top: 30rpx;
  padding: 20rpx;
  background: white;
  border-radius: 8rpx;
}

.detail-text {
  display: block;
  font-family: monospace;
  font-size: 24rpx;
  color: #333;
  white-space: pre-wrap;
  word-break: break-all;
  margin-top: 10rpx;
}
